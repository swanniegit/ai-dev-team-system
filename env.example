# Agentic Agile System API Hub - Environment Configuration

# API Settings
API_V1_STR=/v1
PROJECT_NAME=Agentic Agile System API
VERSION=1.0.0
DEBUG=false

# Database URLs
DATABASE_URL=postgresql://user:password@localhost:5432/agentic_agile
MONGODB_URL=mongodb://localhost:27017/agentic_agile
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-cryptographically-secure-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO

# Event Bus
EVENT_BUS_ENABLED=true

# Agent Settings
MAX_AGENTS_PER_TYPE=5
AGENT_HEARTBEAT_TIMEOUT=300 
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# Git Integration
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
GITLAB_WEBHOOK_TOKEN=your-gitlab-webhook-token
API_BASE_URL=http://localhost:8000